<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/style.css">
    <title>Todo App</title>
  </head>
  <body>
    <form class="todo-create" action="/todo" method="post">
      <input type="text" name="todo" value="">
      <input type="submit" name="submit" value="Create Todo">
    </form>

    <ul>
      {{#todos}}
        {{^completed}}
          <li>
            <form class="todo-complete" action="/todo/{{id}}" method="post">
              <input name="todo" value="Mark Complete" type="submit"> {{name}}
            </form>
          </li>
        {{/completed}}
      {{/todos}}
    </ul>

    <ul>
      {{#todos}}
        {{#completed}}
          <li> {{name}} </li>
        {{/completed}}
      {{/todos}}
    </ul>

  </body>
</html>
